@model SalesPlanningMonitorng.Barang

@Styles.Render("~/Content/uikit.css")
@Styles.Render("~/Content/uikit.almost-flat.min.css")
@Styles.Render("~/Content/percent-pie.css")
@Styles.Render("~/Content/style.css")
@Scripts.Render("~/Scripts/jquery-2.1.0.js")
@Scripts.Render("~/Scripts/uikit.min.js")
@Scripts.Render("~/Scripts/easypiechart.js")
@Scripts.Render("~/Scripts/Chart.js")
@Scripts.Render("~/Scripts/jquery.animateNumber.js")
@Scripts.Render("~/Scripts/components/grid.js")
@Scripts.Render("~/Scripts/components/sticky.js")
@Scripts.Render("~/Scripts/components/tooltip.js")
@Scripts.Render("~/Scripts/components/form-select.js")
@Scripts.Render("~/Scripts/components/pagination.js")

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
}
<!-- container-slide -->
<div class="uk-container-center uk-width-medium-3-4 cs-containter-heigth">

    <!-- mobile-navbar -->
    <nav class="uk-navbar uk-margin-large-bottom uk-hidden-large ">
        <a href="#offcanvas" class="uk-navbar-toggle uk-visible-small" data-uk-offcanvas></a>
        <div class="uk-navbar-brand uk-navbar-center uk-visible-small">Sales Planning and Monitoring</div>
    </nav>
    <!-- end-mobile-navbar -->
    <!-- container-slide-container -->
    <div class="uk-grid uk-margin-right uk-margin-small-left uk-margin-large-top uk-margin-large-bottom" data-uk-grid-margin="">

        <!-- form-pengisian-barang -->
        <div class="uk-width-medium-1-1 cs-min-height">
            <div class="uk-panel uk-panel-header">

                <h3 class="uk-panel-title">Edit Barang</h3>

                <!-- tabel-penjualan -->
                <div class="uk-overflow-container uk-margin-large-top">
                    <div class="uk-form uk-form-stacked">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()


                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.id_barang)


                            <div class="uk-form-row">
                                <label class="uk-form-label">Nama Barang</label>
                                <div class="uk-form-controls">
                                    @Html.TextBoxFor(model => model.nama_barang, new { @class = "uk-width-1-1" })
                                    @Html.ValidationMessageFor(model => model.nama_barang)
                                </div>
                            </div>

                            <div class="uk-form-row">
                                <label class="uk-form-label">Harga Barang</label>
                                <div class="uk-form-controls">
                                    @Html.TextBoxFor(model => model.harga, new { @class = "uk-width-1-1" })
                                    @Html.ValidationMessageFor(model => model.harga)
                                </div>
                            </div>

                            <div class="uk-form-row">
                                <label class="uk-form-label">Kategori</label>
                                <div class="uk-form-controls">
                                    @Html.TextBoxFor(model => model.kategori, new { @class = "uk-width-1-1" })
                                    @Html.ValidationMessageFor(model => model.kategori)
                                </div>

                            </div>

                            <div class="uk-form-row uk-margin-bottom">
                                <div class="uk-form-controls">
                                    <button class="uk-button uk-button-primary uk-hidden-small" type="submit">Submit</button>
                                    <a class="uk-button uk-button-success uk-hidden-small" @Html.ActionLink("Back to List", "Index")
                                      <button class="uk-button uk-button-primary uk-button-large uk-width-1-1 uk-hidden-large uk-hidden-medium uk-visible-small" type="submit">Submit</button>
                                        <a class="uk-button uk-button-success uk-button-large uk-width-1-1 uk-hidden-large uk-hidden-medium uk-visible-small uk-margin-top" @Html.ActionLink("Back to List", "Index")</div>
                            </div>

                        }
                    </div>

                </div>
            </div>
            <!-- end-form-pengisian-barang -->

        </div>


    </div>
